<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include("../../partials/head") %>
		<title>CSP - Dashboard</title>
	</head>
	
	<body>
		<header><%- include("../../partials/header", {configuration: configuration}); %></header>
		
		<div class="tab">
			<button class="tablinks" onclick="openDashboard(event, 'Home')" id="defaultOpen"><%= configuration.text.pages.user.studentDashboard.tabText.home %></button>
			<button class="tablinks" onclick="openDashboard(event, 'Profile')"><%= configuration.text.pages.user.studentDashboard.tabText.profile %></button>
			<button class="tablinks" onclick="openDashboard(event, 'Security')"><%= configuration.text.pages.user.studentDashboard.tabText.security %></button>
			<button class="tablinks" onclick="openDashboard(event, 'History')"><%= configuration.text.pages.user.studentDashboard.tabText.history %></button>
			<button class="tablinks" onclick="openDashboard(event, 'Friends')"><%= configuration.text.pages.user.studentDashboard.tabText.friends %></button>
		</div>
		<div id="Home" class="tabcontent">
			<%- include("../../partials/student-dashboard-home") %>
		</div>
		<div id="Profile" class="tabcontent">
			<%- include("../../partials/student-dashboard-profile") %>
		</div>
		<div id="Security" class="tabcontent">
			<%- include("../../partials/student-dashboard-security") %>
		</div>
		<div id="History" class="tabcontent">
			<%- include("../../partials/student-dashboard-history") %>
		</div>
		<div id="Friends" class="tabcontent">
			<%- include("../../partials/student-dashboard-friends") %>
		</div>
		  
		<script>
		    function openDashboard(evt, dashboardName) {
				var i, tabcontent, tablinks;
				tabcontent = document.getElementsByClassName("tabcontent");

				for (i = 0; i < tabcontent.length; i++) {
				tabcontent[i].style.display = "none";
				}

				tablinks = document.getElementsByClassName("tablinks");
				for (i = 0; i < tablinks.length; i++) {
				tablinks[i].className = tablinks[i].className.replace(" active", "");
				}

				document.getElementById(dashboardName).style.display = "block";
				evt.currentTarget.className += " active";
		    }
		 	document.getElementById("defaultOpen").click();
		</script>
	</body>
</html>