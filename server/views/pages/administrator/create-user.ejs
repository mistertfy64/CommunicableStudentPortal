<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include("../../partials/head") %>
		<title>CSP</title>
	</head>

	<body>
		<header>
			<%- include("../../partials/header", {configuration:
			configuration}); %>
		</header>
		<h1>
			<%= configuration.text.pages.administrator.createUser.titleText %>
		</h1>
		<div class="administrator-dashboard-box">
			<div
				style="
					flex-direction: row;
					align-items: center;
					vertical-align: bottom;
				"
			>
				<%=configuration.text.pages.administrator.createUser.bodyText1%>&nbsp;<input
					type="number"
				/>&nbsp;<%=
				configuration.text.pages.administrator.createUser.bodyText2%>&nbsp;
				<select
					onchange="handleUsernameOptionSelectBoxValueChange(event)"
					name="username-option"
					id="username-option-select-box"
				>
					<option value="random">random</option>
					<option value="ascending">ascending</option>
					<option value="changeable">
						random, user-changeable
					</option></select
				>&nbsp;<%=
				configuration.text.pages.administrator.createUser.bodyText3%>&nbsp;<span
					style="display: none"
					id="username-start-value"
					><%=configuration.text.pages.administrator.createUser.hiddenBodyText1%>&nbsp;<input
						type="number" />&nbsp;</span
				><%=
				configuration.text.pages.administrator.createUser.bodyText4%>&nbsp;
				<select
					onchange="handleUserIDOptionSelectBoxValueChange(event)"
					name="user-id-option"
					id="user-id-option-select-box"
				>
					<option value="random">random</option>
					<option value="ascending">ascending</option>
					<option value="changeable">
						random, user-changeable
					</option></select
				>&nbsp;<%=
				configuration.text.pages.administrator.createUser.bodyText5%><span
					style="display: none"
					id="user-id-start-value"
					>&nbsp;<%=configuration.text.pages.administrator.createUser.hiddenBodyText1%>&nbsp;<input
						type="number"
				/></span>
			</div>
		</div>
		<footer>
			<%- include("../../partials/footer", {configuration:
			configuration}); %>
		</footer>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
		<script>
			function handleUsernameOptionSelectBoxValueChange(event) {
				let value = event.target.value;
				if (value === "ascending") {
					$("#username-start-value").show(0);
				} else {
					$("#username-start-value").hide(0);
				}
			}

			function handleUserIDOptionSelectBoxValueChange(event) {
				let value = event.target.value;
				if (value === "ascending") {
					$("#user-id-start-value").show(0);
				} else {
					$("#user-id-start-value").hide(0);
				}
			}
		</script>
	</body>
</html>
