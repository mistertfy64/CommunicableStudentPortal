<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include("../partials/head") %>
		<title>CSP - Event</title>
	</head>
	
	<body>
		<header><%- include("../partials/header", {configuration: configuration}); %></header>
		<center>
    	<h1>Events</h1>
		<br>
		<p></p>
		
		<button type="button" class="add-event-button" id="modal-button" style="display:flex;justify-content:center;align-items:center;width:60%;">New event</button>
		<div id="modal" class="modal">
			<div class="modal-content"><%- include("../partials/add-event") %></div>
		</div>
		<br><br>
		<%- include("../partials/event-bar") %>
		</center>
		<br><br><br><br><br><br><br><br><br><br>
		<footer><%- include("../partials/footer", {configuration: configuration}); %></footer>

		<script>
			var modal = document.getElementById("modal");
			
			var btn = document.getElementById("modal-button");
			
			var span = document.getElementsByClassName("close")[0];
			
			btn.onclick = function() {
			  modal.style.display = "block";
			}
			
			span.onclick = function() {
			  modal.style.display = "none";
			}
			
			window.onclick = function(event) {
			  if (event.target == modal) {
				modal.style.display = "none";
			  }
			}
		</script>
	</body>
</html>