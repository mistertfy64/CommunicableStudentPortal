<div style="text-align: center">
	<button type="button" class="collapsible">
		<%= configuration.text.partials.leaderboardTable.year1Text %>
	</button>
	<div class="collapsible-content">
		<br />
		<table id="leaderboard" class="horizontal-center">
			<tr>
				<th>
					<%= configuration.text.partials.leaderboardTable.rankText %>
				</th>
				<th>
					<%=
					configuration.text.partials.leaderboardTable.usernameText %>
				</th>
				<th>
					<%= configuration.text.partials.leaderboardTable.scoreText
					%>
				</th>
			</tr>
            <% if (data){ %>
			<% for (let i = 0; i < data.length; i++){ %>
                <th>
                    <%= i+1 %>
                </th>
                <th>
                <%= data[i].username %>
            </th>
            <th>
                <%= data[i].statistics[stat] %>
            </th>
            <% } %> 
            <% } %>
		</table>
		<br />
	</div>
</div>

<script>
	var coll = document.getElementsByClassName("collapsible");
	var i;

	for (i = 0; i < coll.length; i++) {
		coll[i].addEventListener("click", function () {
			this.classList.toggle("active");
			var content = this.nextElementSibling;
			if (content.style.maxHeight) {
				content.style.maxHeight = null;
			} else {
				content.style.maxHeight = content.scrollHeight + "px";
			}
		});
	}
</script>
