<button type="button" class="collapsible"><%= configuration.text.partials.eventBar.titleText %></button>
<div class="collapsible-content">
    <br>
    <div class="collapsible-reaction" style="position: relative">
        <%- include("reaction.ejs") %>
    </div>
    <p><%= configuration.text.partials.eventBar.descriptionText %></p>
    <button type="post" class="interested-button"><%= configuration.text.partials.eventBar.interestedText %> (<%= configuration.text.partials.eventBar.interestedNum %>)</button>
    </br>
    <button type="button" class="collapsible"><%= configuration.text.partials.eventBar.commentsTitleText %></button>
    <div class="collapsible-content">
        <br>
        <%- include("add-comment.ejs") %>
        <br><br>
        <%- include("comments.ejs") %>
        </br>
        <br>
    </div>
</div>
<script>
    var coll = document.getElementsByClassName("collapsible");
    var i;
    
    for (i = 0; i < coll.length; i++) {
        coll[i].addEventListener("click", function() {
        this.classList.toggle("active");
        var content = this.nextElementSibling;
        if (content.style.maxHeight){
            content.style.maxHeight = null;
        } else {
            content.style.maxHeight = content.scrollHeight + "px";
        } 
    });
}
</script>