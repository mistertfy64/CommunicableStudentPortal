<h3><%= configuration.text.pages.user.studentDashboard.tabText.profile %></h3>
<div style="display: flex; flex-direction: column; width: 95%; left: 2.5%">
	<!-- TODO: Convert everything into text.json -->
	<div class="student-dashboard-box clearfix">
		<div style="font-size: 24px">Current Name</div>
		<div style="font-size: 36px"><%= data.name %></div>
		<div style="text-align: right">
			<button
				class="button-rounded button-color-neutral"
				onClick="showChangeNameInputField()"
			>
				Change Name
			</button>
			<form action="/operations/changeName" method="POST">
				<div id="change-name-input-field" style="display: none">
					<input type="text" name="new-name" /><button
						class="button-color-positive button-color-neutral"
						type="submit"
					>
						Set New Name
					</button>
				</div>
			</form>
		</div>
	</div>
	<br />
	<div class="student-dashboard-box clearfix">
		<div
			style="
				display: flex;
				flex-direction: row;
				justify-content: space-between;
			"
		>
			<div>
				<div style="font-size: 24px">Current Username</div>
				<div style="font-size: 36px"><%= data.username.toString() %></div>
			</div>
			<div style="text-align: right">
				<button
					class="button-rounded button-color-neutral"
					onClick="showChangeUsernameInputField()"
				>
					Change Username
				</button>
				<form action="/operations/changeUsername" method="POST">
					<div id="change-username-input-field" style="display: none">
						<input type="text" name="new-username" /><button
							class="button-color-positive button-color-neutral"
							type="submit"
						>
							Set New Username
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
	<script>
function showChangeNameInputField() {
			$("#change-name-input-field").show(0);
		}

		function showChangeUsernameInputField() {
			$("#change-username-input-field").show(0);
		}
	</script>
</div>
